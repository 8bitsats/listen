[Unit]
Description=Listen Engine Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=listen-engine
Group=listen-engine
Restart=always
RestartSec=1
Environment=IS_SYSTEMD_SERVICE=1
Environment=RUST_LOG=info
EnvironmentFile=/etc/listen-engine/environment
WorkingDirectory=/opt/listen-engine
ExecStart=/usr/local/bin/engine

StandardOutput=append:/var/log/listen-engine/output.log
StandardError=append:/var/log/listen-engine/error.log

[Install]
WantedBy=multi-user.target
